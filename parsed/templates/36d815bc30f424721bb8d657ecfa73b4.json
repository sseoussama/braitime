{"components/products/description":"<div class=\"description\">\n    {{{product.description}}}\n    {{{snippet 'product_description'}}}\n</div>\n<a class=\"showMore showButton hide\">Show More</a>\n<a class=\"showLess showButton hide\">Show Less</a>\n\n{{!-- {{#if product.warranty}}\n    <p class=\"productView-title\">{{lang 'products.warranty'}}</p>\n    <div class=\"productView-description\">\n        {{{product.warranty}}}\n    </div>\n{{/if}} --}}\n\n\n\n\n\n<script>\nsetTimeout(() => {\n    var $desc = $('.description');\n    var $showMore = $('.showMore');\n    var $showLess = $('.showLess');\n    var tooTall = $desc.innerHeight() >= 105;\n\n    // reveal \"show more\"\n    if(tooTall){ $showMore.removeClass('hide'); }\n\n    // Click \"showMore\"\n    $showMore.click( function() {\n        $desc.addClass('open');\n        $showMore.addClass('hide');\n        $showLess.removeClass('hide');\n    });\n    \n    // Click \"showLess\"\n    $showLess.click( function() {\n        $desc.removeClass('open');\n        $showLess.addClass('hide');\n        $showMore.removeClass('hide');\n    });\n\n}, 1000);\n</script>"}
