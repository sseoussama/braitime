{"components/products/options/set-rectangle":"\n{{!-- style for tooltip --}}\n<style type=\"text/css\">\n    [data-product-attribute] .form-option {\n        overflow: visible;\n    }\n</style>\n\n<div class=\"form-field\" data-product-attribute=\"set-rectangle\">\n    <label class=\"form-label form-label--alternate form-label--inlineSmall\">\n        {{this.display_name}}:\n        <span data-option-value></span>\n        {{#if required}}\n            <small>{{lang 'common.required'}}</small>\n        {{/if}}\n    </label>\n    {{#each this.values}}\n        <input\n            class=\"form-radio\"\n            type=\"radio\"\n            id=\"attribute_{{id}}\"\n            name=\"attribute[{{../id}}]\"\n            value=\"{{id}}\"\n            {{#if selected}}\n                checked\n                data-default\n            {{/if}}\n            {{#if ../required}}required{{/if}}>\n        \n\n        {{#if this.label '==' 'Small'}}\n            <label \n                class=\"form-option\" \n                for=\"attribute_{{id}}\" \n                data-product-attribute-value=\"{{id}}\"\n                data-tooltip=\"Fits Men's Shoe Size 5-9. Small feet need great socks too!\"\n                data-placement=\"bottom\"\n            >\n                <span class=\"form-option-variant\">{{this.label}}</span>\n            </label>\n        \n\n\n        {{else if this.label '==' 'Regular'}}\n            <label \n                class=\"form-option\" \n                data-tooltip=\"Fits Men's Shoe Size 9-13. With additional stretch if needed.\"\n                for=\"attribute_{{id}}\" \n                data-product-attribute-value=\"{{id}}\"\n                data-placement=\"bottom\"\n            >\n                    <span class=\"form-option-variant\">{{this.label}}</span>\n            </label>\n        \n\n\n        {{else}}\n            <label class=\"form-option\" for=\"attribute_{{id}}\" data-product-attribute-value=\"{{id}}\">\n                    <span class=\"form-option-variant\">{{this.label}}</span>\n            </label>\n        {{/if}}\n    {{/each}}\n</div>\n\n"}
